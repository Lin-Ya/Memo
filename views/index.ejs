<!DOCTYPE html>
<html>
  <head>
    <title>在线便签</title>
    <link rel='stylesheet' href='./css/style.css' />
  </head>
  <body>
    <div class="header">
      <div class="left">
        <h1>在线便签</h1>
        <button class="remove">清空便签</button>
      </div>
      <div class="right">
        <button class="add">添加便签</button>
        <% if (isLogin){ %>
        <div class="loginSpan">
          <img src="<%= user.avatar %>" alt="">
          <div>
            <span title="<%= user.username %>">
              <%= user.username %>
            </span>
            <a href="/auth/logout">注销</a>
          </div>
        </div>
        <%} else { %>
          <span class="signSpan">
            <i class="iconfont icon-user"></i>
          </span>
        <% } %>
        <!-- <span class="login-out"><i class="iconfont icon-user"></i></span> -->
      </div>
    </div>
      <div class="main">
        <div class="sign">
          <div class="modal login">
            <div class="modal-login">
              <div class="close">
                <a href="#" class="close">
                  <i class="iconfont icon-close" aria-hidden="true"></i>
                </a>
              </div>
              <div id="tabs">
                <a href="#" class="login active">登录</a>
                <a class="register" href="#">注册</a>
              </div>
              <div id="login-form">
                <div id="errormsg"></div>
                <form action="/login" method="post">
                  <div class="input-field">
                    <i class="iconfont icon-user" aria-hidden="true"></i>
                    <input type="text" name="username" placeholder="用户名">
                  </div>
                  <div class="input-field">
                    <i class="iconfont icon-password" aria-hidden="true"></i>
                    <input type="password" name="password" placeholder="密码">
                  </div>
                  <div class="input-field-btn">
                    <input type="submit" value="登录">
                    <div class="github">
                      <i class="iconfont icon-github"></i>
                      <a href="/auth/github" tittle="GitHub登录">Github登录</a>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <div class="modal-register">
              <div class="close">
                <a href="#" class="close">
                  <i class="iconfont icon-close" aria-hidden="true"></i>
                </a>
              </div>
              <div id="tabs">
                <a class="login" href="#">登录</a>
                <a class="register active" href="#">注册</a>
              </div>
              <div id="register-form" class="clearfix">
                <div id="errormsg" class="clearfix"></div>
                <form action="/regiter" method="post">
                  <div class="input-field clearfix">
                    <i class="iconfont icon-user" aria-hidden="true"></i>
                    <input type="text" name="username" placeholder="请设置用户名">
                  </div>
                  <div class="input-field clearfix">
                    <i class="iconfont icon-password" aria-hidden="true"></i>
                    <input type="password" name="password" placeholder="请设置密码">
                  </div>
                  <div class="input-field clearfix">
                    <i class="iconfont icon-password" aria-hidden="true"></i>
                    <input type="password" name="password2" placeholder="请确认密码">
                  </div>
                  <div class="input-field-btn">
                    <input type="submit" value="注册">
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <div class="container">
        </div>
    </div>
    <div class="footer"></div>
    <script src="./js/jquery-3.3.1.min.js"></script>
    <script src="./js/index.js"></script>
  </body>
</html>
